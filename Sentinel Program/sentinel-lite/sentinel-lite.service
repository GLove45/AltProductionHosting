[Unit]
Description=Sentinel Lite Security Suite
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/sentinel-lite
ExecStart=/usr/bin/python3 /opt/sentinel-lite/sentinelctl.py start
Restart=on-failure
RestartSec=5
User=root
Group=root
Environment=PYTHONPATH=/opt/sentinel-lite

[Install]
WantedBy=multi-user.target
