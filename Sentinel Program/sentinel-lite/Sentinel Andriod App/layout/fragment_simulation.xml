<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050509"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simulation Lab"
            android:textColor="#FF00B7"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <TextView
            android:id="@+id/simulation_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#E5E5FF"
            android:text="Select a scenario to inject signals into the rules engine."
            android:paddingBottom="12dp" />

        <LinearLayout
            android:id="@+id/scenario_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>
</ScrollView>
