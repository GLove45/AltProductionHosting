<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050509"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#0A0F1F"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Isolation Console"
                android:textColor="#FF00B7"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/isolation_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isolation mode"
                android:textColor="#E5E5FF"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/isolation_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Radios active"
                android:textColor="#9AA1B9"
                android:paddingTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#0C1F30"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MFA & Keys"
                android:textColor="#FF00B7"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/mfa_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp" />

            <Button
                android:id="@+id/add_token_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register token"
                android:textAllCaps="false"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#111933"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evidence Vault"
                android:textColor="#FF00B7"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/evidence_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 artifacts"
                android:textColor="#E5E5FF"
                android:paddingTop="8dp" />

            <Button
                android:id="@+id/refresh_evidence_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refresh"
                android:textAllCaps="false"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#0A0F1F"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Audit Log"
                android:textColor="#FF00B7"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/audit_log_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/simulation_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Simulation Lab"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>
