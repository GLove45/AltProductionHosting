<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#111933"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/policy_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/policy_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#9AA1B9"
        android:textSize="14sp"
        android:paddingTop="4dp" />

    <Switch
        android:id="@+id/policy_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enforce"
        android:textColor="#E5E5FF"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/policy_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#5AB3FF"
        android:textSize="12sp"
        android:paddingTop="4dp" />
</LinearLayout>
