<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050509"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/header_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_sentinel_head"
            android:padding="8dp" />

        <TextView
            android:id="@+id/sentinel_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S E N T I N E L"
            android:textColor="#FF00B7"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="16dp" />

        <LinearLayout
            android:id="@+id/risk_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#0A0F1F"
            android:padding="20dp"
            android:layout_marginBottom="12dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device Risk Score"
                android:textColor="#E5E5FF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/risk_score_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#00CFFF"
                android:textSize="48sp"
                android:textStyle="bold"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/risk_factors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Factors: --"
                android:textColor="#9AA1B9"
                android:textSize="13sp"
                android:paddingTop="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/summary_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading cluster status…"
            android:textColor="#DDDDDD"
            android:textSize="14sp"
            android:paddingBottom="16dp" />

        <LinearLayout
            android:id="@+id/network_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#0C1F30"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Network Posture"
                android:textColor="#FF00B7"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/network_ssid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wi-Fi: --"
                android:textColor="#E5E5FF"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/network_security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Security: --"
                android:textColor="#9AA1B9" />

            <TextView
                android:id="@+id/network_vpn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VPN: --"
                android:textColor="#9AA1B9" />

            <TextView
                android:id="@+id/network_issues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Issues: --"
                android:textColor="#FF9C66"
                android:paddingTop="4dp" />

            <Button
                android:id="@+id/capture_evidence_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capture Wi-Fi Evidence"
                android:textAllCaps="false"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/monitoring_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#111933"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monitoring Insights"
                android:textColor="#FF00B7"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/monitoring_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gathering data…"
                android:textColor="#E5E5FF"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/integrity_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Integrity: --"
                android:textColor="#9AA1B9" />
        </LinearLayout>

        <Button
            android:id="@+id/refresh_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refresh Sensors"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Live Alerts"
            android:textColor="#FF00B7"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:id="@+id/alerts_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>
</ScrollView>
