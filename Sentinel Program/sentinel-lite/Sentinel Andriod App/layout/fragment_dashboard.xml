<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050509"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Sentinel neon wolf header -->
        <ImageView
            android:id="@+id/header_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_sentinel_head"
            android:padding="8dp" />

        <TextView
            android:id="@+id/sentinel_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S E N T I N E L"
            android:textColor="#FF00B7"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="16dp" />

        <!-- Risk Score Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#0A0F1F"
            android:padding="20dp"
            android:layout_marginBottom="12dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cluster Risk Score"
                android:textColor="#E5E5FF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/risk_score_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#00CFFF"
                android:textSize="48sp"
                android:textStyle="bold"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- Cluster summary line that DashboardFragment is looking for -->
        <TextView
            android:id="@+id/summary_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading cluster statusâ€¦"
            android:textColor="#DDDDDD"
            android:textSize="14sp"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latest Alerts"
            android:textColor="#FF00B7"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Container that DashboardFragment fills -->
        <LinearLayout
            android:id="@+id/alerts_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>
</ScrollView>
