<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#0A0F1F"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/security_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="4dp"
        android:src="@drawable/ic_shield" />

    <LinearLayout
        android:id="@+id/security_card_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/security_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E5E5FF"
            android:textSize="14sp"
            android:text="Section" />

        <TextView
            android:id="@+id/security_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A0A0A0"
            android:textSize="12sp"
            android:text="Details" />

        <TextView
            android:id="@+id/security_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4DD0E1"
            android:textSize="12sp"
            android:text="Status" />
    </LinearLayout>
</LinearLayout>
